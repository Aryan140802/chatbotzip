import axios from 'axios';

// Create axios instance with custom configuration
const api = axios.create({
  baseURL: 'https://10.191.171.12:5443/EISHOME/',
  timeout: 100000,
  headers: {
    'Content-Type': 'application/json',
  }
});

// ==================== SESSION MANAGEMENT UTILITIES ====================

// Robust function to clear all cookies (within JS limitations)
function clearAllCookies() {
  const cookies = document.cookie.split(";");
  for (const cookie of cookies) {
    const eqPos = cookie.indexOf("=");
    const name = eqPos > -1 ? cookie.substr(0, eqPos).trim() : cookie.trim();
    // Remove cookie for root path
    document.cookie = `${name}=;expires=Thu, 01 Jan 1970 00:00:00 GMT;path=/`;
    // Attempt to remove cookie for every path segment
    const pathSegments = window.location.pathname.split('/');
    let path = '';
    for (let i = 0; i < pathSegments.length; i++) {
      path += (path.endsWith('/') ? '' : '/') + pathSegments[i];
      document.cookie = `${name}=;expires=Thu, 01 Jan 1970 00:00:00 GMT;path=${path};`;
    }
  }
}

// Enhanced function to clear all storage
function clearAllStorage() {
  // Clear localStorage
  localStorage.clear();
  
  // Clear sessionStorage
  sessionStorage.clear();
  
  // Clear all cookies
  clearAllCookies();
  
  // Clear IndexedDB (if needed)
  if (window.indexedDB && indexedDB.databases) {
    indexedDB.databases().then(databases => {
      databases.forEach(db => {
        if (db.name) indexedDB.deleteDatabase(db.name);
      });
    });
  }
  
  // Clear Service Worker cache (if applicable)
  if ('caches' in window) {
    caches.keys().then(names => names.forEach(name => caches.delete(name)));
  }
}

// Function to check if session data exists in localStorage
function hasSessionData() {
  const sessionId = localStorage.getItem('sessionid');
  const username = localStorage.getItem('username');
  const userLevel = localStorage.getItem('userlevel');
  
  return !!(sessionId && username && userLevel);
}

// Global logout handler reference
let globalLogoutHandler = null;

// Function to set global logout handler
export function setLogoutHandler(handler) {
  globalLogoutHandler = handler;
}

// Function to trigger logout from anywhere
export function triggerLogout(reason = 'Session expired') {
  console.log(`Triggering logout: ${reason}`);
  
  if (globalLogoutHandler) {
    globalLogoutHandler(reason);
  } else {
    // Fallback: clear storage and reload
    clearAllStorage();
    window.location.reload();
  }
}

// Function to validate session
export async function validateSession() {
  try {
    const sessionId = localStorage.getItem('sessionid');
    const username = localStorage.getItem('username');
    
    if (!sessionId || !username) {
      return { isValid: false, reason: 'Missing session data' };
    }

    // Call session validation API
    const response = await api.post('awthenticationService/validateSession/', {
      username: username,
      timestamp: new Date().toISOString()
    }, {
      headers: {
        'Authorization': `Bearer ${sessionId}`
      }
    });

    if (response.status === 401 || response.status === 403) {
      return { isValid: false, reason: 'Session expired or invalid' };
    }

    if (response.data.isValid === false || response.data.status === 'expired' || response.data.error) {
      return { isValid: false, reason: 'Session expired' };
    }
    
    return { isValid: true };
  } catch (error) {
    console.error('Error validating session:', error);
    return { isValid: false, reason: 'Validation error' };
  }
}

// ==================== AXIOS INTERCEPTORS ====================

// Request interceptor to attach Authorization header
api.interceptors.request.use(
  (config) => {
    // Get the session ID from localStorage just before the request is made
    const sessionId = localStorage.getItem('sessionid');

    // If a sessionId exists, attach the Authorization header
    if (sessionId) {
      config.headers.Authorization = `Bearer ${sessionId}`;
    }

    return config;
  },
  (error) => {
    return Promise.reject(error);
  }
);

// Response interceptor to handle authentication errors
api.interceptors.response.use(
  (response) => {
    return response;
  },
  (error) => {
    // Check for authentication errors
    if (error.response) {
      const { status } = error.response;
      
      // Handle 401 (Unauthorized) and 403 (Forbidden) errors
      if (status === 401 || status === 403) {
        console.log(`API authentication error (${status}):`, error.response.data);
        
        // Check if we're not already on login page to avoid infinite loops
        if (!window.location.pathname.includes('login') && !window.location.pathname.includes('Login')) {
          // Trigger logout after a short delay
          setTimeout(() => {
            triggerLogout(`API authentication failed (${status})`);
          }, 100);
        }
        
        // Return a rejected promise with a specific error type
        return Promise.reject({
          ...error,
          isAuthError: true,
          status: status
        });
      }
      
      // Check for specific session expired messages in response
      if (error.response.data && 
          (error.response.data.message?.toLowerCase().includes('session') ||
           error.response.data.error?.toLowerCase().includes('session') ||
           error.response.data.Response?.toLowerCase().includes('session'))) {
        console.log('Session expired detected in response:', error.response.data);
        
        setTimeout(() => {
          triggerLogout('Session expired detected in API response');
        }, 100);
        
        return Promise.reject({
          ...error,
          isSessionExpired: true,
          status: status
        });
      }
    } else if (error.request) {
      // The request was made but no response was received
      console.error('Network error or no response:', error.request);
    } else {
      // Something happened in setting up the request
      console.error('Request setup error:', error.message);
    }
    
    return Promise.reject(error);
  }
);

// ==================== EXISTING API FUNCTIONS ====================

// Modified postMessage to always send data under "message"
export const postMessage = (data) => {
  if (typeof data === 'string') {
    return api.post('EIS-GINI/', { "message": data }, { timeout: 100000 });
  }
  if (Array.isArray(data)) {
    return api.post('EIS-GINI/', { "message": data }, { timeout: 100000 });
  }
  if (typeof data === 'object' && data !== null) {
    if (data.hasOwnProperty('message')) {
      return api.post('EIS-GINI/', data, { timeout: 100000 });
    }
    return api.post('EIS-GINI/', { "message": data }, { timeout: 100000 });
  }
  return api.post('EIS-GINI/', { "message": data }, { timeout: 100000 });
};

