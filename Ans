                <div class="ips-list">
                    {% for value in data.layerIps|slice:":8" %}
                        {% if value %}
                        <div class="ip-item">10.xxx.{{ value.serverIp }}</div>
                        {% endif %}
                    {% endfor %}
                </div>
                
                {% if data.layerIps|length > 8 %}
                <div class="more-ips">
                    +{{ data.layerIps|length|add:"-8" }} more IPs
                </div>
                {% endif %}
            </div>
            
            <div class="card-link">
                {% for ip in data.layerIps %}
                    {% if forloop.first %}
                    <a href='{% url 'api_server' data.layerName ip.serverIp %}' target="_blank">
                        Go To {{ data.layerName }}
                    </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endfor %}
