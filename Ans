    <script>
        function toggleIPs(cardId) {
            const ipsList = document.getElementById(`ips-list-${cardId}`);
            const toggleBtn = document.getElementById(`toggle-btn-${cardId}`);
            
            if (ipsList.classList.contains('expanded')) {
                ipsList.classList.remove('expanded');
                toggleBtn.textContent = 'Show more...';
            } else {
                ipsList.classList.add('expanded');
                toggleBtn.textContent = 'Show less';
            }
        }
    </script>
