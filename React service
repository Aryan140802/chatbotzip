[Unit]
Description=React Build Static Server
After=network.target

[Service]
WorkingDirectory=/var/www/PORTAL_PRE_TEST/PyPortal/shiftHandover_frontend/build
ExecStart=/usr/bin/python3 -m http.server 7654
Restart=always
User=www-data
Group=www-data
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target





location /shiftHandoverFrontend/ {
    proxy_pass http://127.0.0.1:7654/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
}
